<table class="table table-bordered">
  <thead>
  <tr>
    <th>id</th>
    <th>email</th>
    <th>admin</th>
    <th>edotor</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
  </thead> 
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <th><%=user.id %></th>
        <th><%=user.email %></th>
        <th><%=user.has_role? :admin %></th>
        <th><%=user.has_role? :edotor %></th>
        <th><%= link_to '編集', edit_user_path(user),class: "btn btn-default" %></th>
        <th>
          <%# TODO 自分の時は消せないように,表示しない %>
          <%= link_to "削除", user_path(user), 
                      method: :delete, class: "btn btn-default" ,
                      data: { confirm: '削除しても宜しいですか？' } %>
       </th>
      </tr>
    </tbody>
  <% end %>
</table>
