
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">SmartForm管理画面</h1>
            <div class="account-wall">
              <%= form_for(resource,
                 :as => resource_name,
                 :url => session_path(resource_name),:html => {:class => "form-signin"}) do |f| %>
                  <%= f.text_field :email, 
                             class: "form-control",
                              placeholder: "メールアドレスを入力してください。"  %>
                  <%= f.password_field :password, 
                             class: "form-control",
                              placeholder: "パスワードを入力してください。"  %>
                  <%= f.submit :users, value: 'ログイン', class: "btn btn-lg btn-primary btn-block" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
